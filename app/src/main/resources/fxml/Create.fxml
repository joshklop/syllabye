            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="courseSubject" promptText="Course Subject (e.g. CS)" />
            <TextField fx:id="courseNumber" promptText="Course Number (e.g. 3443)" GridPane.rowIndex="1" />
            <TextField fx:id="courseName" promptText="Course Name (e.g. Applications Programming)" GridPane.rowIndex="2" />
            <TextField fx:id="professorName" promptText="Professor Name" GridPane.rowIndex="3" />
            <TextField fx:id="year" promptText="Year" GridPane.rowIndex="4" />
