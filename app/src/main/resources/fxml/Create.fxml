                <MenuItem fx:id="springSemester" mnemonicParsing="false" onAction="#setSemesterToSpring" text="Spring" />
                <MenuItem fx:id="maymester" mnemonicParsing="false" onAction="#setSemesterToMay" text="May" />
                  <MenuItem fx:id="summerSemester" mnemonicParsing="false" onAction="#setSemesterToSummer" text="Summer" />
                  <MenuItem fx:id="fallSemester" mnemonicParsing="false" onAction="#setSemesterToFall" text="Fall" />
                  <MenuItem fx:id="wintermester" mnemonicParsing="false" onAction="#setSemesterToWinter" text="Winter" />
              </items>
            </MenuButton>
         </children>
      </GridPane>
   </center>
   <right>
      <Button fx:id="save" mnemonicParsing="false" onMouseClicked="#onSave" text="Save" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <Button fx:id="previousScene" mnemonicParsing="false" onMouseClicked="#clickToPreviousPane" text="prev scene" BorderPane.alignment="CENTER" />
   </left>
